@{
}
<style>
    .jumbotron-fluid {
        padding-right: 0;
        padding-left: 0;
        border-radius: 0;
        /*    background: none;*/
    }
    .fullscreen {
        position: fixed;
        top: 57px;
        left: 0px;
        bottom: 0;
        right: 0;
        overflow: auto;
        @*width:100%;
        height:100%;*@
        background: url('@Url.Content("~/css/pension-fund-vector.png")');
        background-size: cover;
        background-repeat: no-repeat;
        @*background-attachment: fixed;*@
    }
</style>
<div class="fullscreen">
    <div class="container">
        <div class="jumbotron-fluid">
            @if (ViewBag.error != null)
            {
                <br />
                <h2 style="font-weight: bold;color: red;">Sorry<span style="font-weight: bold; color: #125289">@ViewBag.user</span></h2>
                <br />

                <h2 style="font-weight: bold;color:red;">@ViewBag.error</h2>
            }
        </div>
    </div>
</div>