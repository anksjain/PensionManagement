@model PensionManagement.Models.AadharEntry

@{
    ViewData["Title"] = "AllDetails";
}
<style>
    .fullscreen {
        position: fixed;
        top: 57px;
        left: 0px;
        bottom: 0;
        right: 0;
        overflow: auto;
        @*width:100%;
        height:100%;*@
        background: url('@Url.Content("~/css/pension-fund-vector.png")');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
</style>
<div class="fullscreen">
    <div class="container">
        <h2>To View All Your Details</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AllDetails">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AadharNo" class="control-label" style="font-weight:bold"></label>
                        @*<h3 style="color:rebeccapurple;font-family:cursive">Enter Your Aadhar Number</h3>*@
                        <input asp-for="AadharNo" class="form-control" />
                        <span asp-validation-for="AadharNo" class="text-danger" style="color:red;font-size:medium"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Check" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
